<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
        "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
        "https://checkstyle.org/dtds/configuration_1_3.dtd">


<module name="Checker">
    <!-- S'assurer que les classes suivent les conventions de nommage -->
    <module name="TreeWalker">
        <module name="ClassTypeParameterName"/>
        <module name="ConstantName"/>

        <!-- Limiter la longueur des lignes de code -->
        <module name="LineLength">
            <property name="max" value="120"/>
        </module>

        <!-- Vérifier que les fichiers Java utilisent des blocs correctement -->
        <module name="NeedBraces"/>

        <!-- S'assurer que les importations inutilisées sont supprimées -->
        <module name="UnusedImports"/>

        <!-- Empêcher l'utilisation d'espaces inutiles -->
        <module name="WhitespaceAround"/>

        <!-- Limiter le nombre de paramètres dans une méthode -->
        <module name="ParameterNumber">
            <property name="max" value="20"/>
        </module>
    </module>
</module>